{
  "name": "cuidado-monorepo",
  "version": "1.0.0",
  "description": "CUIDADO Engine + Pagi Hall - Complete civic AI ecosystem",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:engine": "cd packages/engine && npm run dev",
    "dev:frontend": "cd packages/pagihall && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "install:all": "npm install && npm install --workspaces",
    "clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "ai",
    "civic",
    "behavioral",
    "local-first",
    "monorepo"
  ],
  "author": "Pagi Hall Collective",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}